# osdial.conf - configuration elements for the astguiclient package
# this is the astguiclient configuration file
# all comments will be lost if you run install.pl again
OSDversion => 2.1.0

# Location of Documentation and Samples
PATHdocs => /usr/share/doc/osdial-2.1.0

# Paths used by astGUIclient
PATHhome => /opt/osdial/bin
PATHlogs => /var/log/osdial
PATHagi => /var/lib/asterisk/agi-bin
PATHweb => /opt/osdial/html
PATHsounds => /var/lib/asterisk/sounds
PATHmonitor => /var/spool/asterisk/monitor
PATHDONEmonitor => /var/spool/asterisk/DONEmonitor

PATHarchive_home => /opt/osdial/recordings
PATHarchive_unmixed => processing/wav
PATHarchive_mixed => processing/mp3
PATHarchive_sorted => completed


# The IP address of this machine
VARserver_ip => 10.0.0.1

# Database connection information
VARDB_server => 127.0.0.1
VARDB_database => osdial
VARDB_user => osdial
VARDB_pass => osd1234
VARDB_port => 3306

# Alpha-Numeric list of the astGUIclient processes to be kept running
# (value should be listing of characters with no spaces: 123456)
#  X - NO KEEPALIVE PROCESSES (use only if you want none to be keepalive)
#  1 - AST_update
#  2 - AST_send_listen
#  3 - AST_VDauto_dial
#  4 - AST_VDremote_agents
#  5 - AST_VDadapt (If multi-server system, this must only be on one server)
#  6 - FastAGI_log
#  7 - AST_VDauto_dial_FILL (only for multi-server, this must only be on one server)
VARactive_keepalives => X

# Settings for FastAGI logging server
VARfastagi_log_min_servers => 3
VARfastagi_log_max_servers => 16
VARfastagi_log_min_spare_servers => 2
VARfastagi_log_max_spare_servers => 8
VARfastagi_log_max_requests => 1000
VARfastagi_log_checkfordead => 30
VARfastagi_log_checkforwait => 60

# Recording FTP archive variables
VARFTP_host => 10.0.0.1
VARFTP_user => cron
VARFTP_pass => 1234
VARFTP_port => 21
VARFTP_dir => recordings/processing/wav
VARHTTP_path => http://10.0.0.1

# Report FTP variables
VARREPORT_host => 10.0.0.1
VARREPORT_user => cron
VARREPORT_pass => 1234
VARREPORT_port => 21
VARREPORT_dir => reports
